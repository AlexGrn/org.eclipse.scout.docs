{
  "id": "jswidgets.TilesForm",
  "type": "model",
  "displayHint": "view",
  "rootGroupBox": {
    "id": "MainBox",
    "objectType": "GroupBox",
    "fields": [
      {
        "id": "DetailBox",
        "objectType": "GroupBox",
        "gridColumnCount": 1,
        "fields": [
          {
            "id": "TilesField",
            "objectType": "TilesField",
            "labelVisible": false,
            "gridDataHints": {
              "h": 2
            },
            "tiles": {
              "id": "Tiles",
              "objectType": "Tiles",
              "scrollable": true,
              "tiles": [
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 1"
                },
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 2"
                },
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 3"
                },
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 4"
                },
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 5"
                }
              ]
            }
          }
        ]
      },
      {
        "id": "PropertiesBox",
        "objectType": "GroupBox",
        "label": "Properties",
        "fields": [
          {
            "id": "GridColumnCountField",
            "objectType": "NumberField",
            "label": "Grid Column Count"
          },
          {
            "id": "LogicalGridField",
            "objectType": "SmartField",
            "label": "Logical Grid",
            "lookupCall": "jswidgets.LogicalGridLookupCall",
            "tooltipText": "${textKey:LogicalGridWithRefTooltip}"
          },
          {
            "id": "LogicalGridColumnWidthField",
            "objectType": "NumberField",
            "label": "Logical Grid Column Width"
          },
          {
            "id": "LogicalGridRowHeightField",
            "objectType": "NumberField",
            "label": "Logical Grid Row Height"
          },
          {
            "id": "MaxContentWidthField",
            "objectType": "NumberField",
            "label": "Max Content Width"
          },
          {
            "id": "ColorSchemeField",
            "objectType": "SmartField",
            "label": "Color Scheme",
            "lookupCall": "jswidgets.ColorSchemeLookupCall"
          },
          {
            "id": "WithPlaceholdersField",
            "objectType": "CheckBoxField",
            "label": "With Placeholders",
            "labelVisible": false
          },
          {
            "id": "InvertColorsField",
            "objectType": "CheckBoxField",
            "label": "Invert Colors",
            "labelVisible": false
          },
          {
            "id": "SelectableField",
            "objectType": "CheckBoxField",
            "label": "Selectable",
            "labelVisible": false
          },
          {
            "id": "ScrollableField",
            "objectType": "CheckBoxField",
            "label": "Scrollable",
            "labelVisible": false
          }
        ]
      },
      {
        "id": "ActionsBox",
        "objectType": "GroupBox",
        "label": "Actions",
        "fields": [
          {
            "id": "InsertButton",
            "objectType": "Button",
            "label": "Insert tile"
          },
          {
            "id": "InsertManyButton",
            "objectType": "Button",
            "label": "Insert many tiles"
          },
          {
            "id": "DeleteButton",
            "objectType": "Button",
            "label": "Delete selected tiles"
          },
          {
            "id": "SelectNextButton",
            "objectType": "Button",
            "label": "Select next tile"
          },
          {
            "id": "SelectAllButton",
            "objectType": "Button",
            "label": "Select all tiles"
          }
        ]
      }
    ]
  }
}
