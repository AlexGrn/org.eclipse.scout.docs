        "menus": [
           {
            "id": "GroupsMenu",
            "objectType": "Menu",
            "text": "Groups",
            "childActions": [
              {
              "id": "InsertMenu",
              "objectType": "Menu",
              "text": "Insert group"
              },
              {
                "id": "DeleteFirstMenu",
                "objectType": "Menu",
                "text": "Delete first group"
              }
            ]
          },
          {
            "id": "InsertTileIntoGroup0Menu",
            "objectType": "Menu",
            "text": "Insert tile into group 0"
          },
          {
            "id": "InsertTileIntoGroup1Menu",
            "objectType": "Menu",
            "text": "Insert tile into group 1"
          },
          {
            "id": "DeleteSelectedTilesMenu",
            "objectType": "Menu",
            "text": "Delete selected tiles"
          },
          {
            "id": "SelectNextMenu",
            "objectType": "Menu",
            "text": "Select next tile"
          },
          {
            "id": "SelectAllMenu",
            "objectType": "Menu",
            "text": "Select all tiles"
          },
          {
            "id": "SortMenu",
            "objectType": "Menu",
            "text": "Sort",
            "childActions": [
              {
                "id": "SortAscMenu",
                "objectType": "Menu",
                "text": "Ascending"
              },
              {
                "id": "SortDescMenu",
                "objectType": "Menu",
                "text": "Descending"
              }
            ]
          }
        ],
        "fields": [
          {
            "id": "AccordionField",
            "objectType": "AccordionField",
            "labelVisible": false,
            "gridDataHints": {
              "h": 4,
              "w": 2
            },
            "accordion": {
              "id": "Accordion",
              "objectType": "TilesAccordion",
              "scrollable": true
            }
          }
        ]
      },
      {
        "id": "PropertiesBox",
        "objectType": "GroupBox",
        "label": "Properties",
        "expandable": true,
        "fields": [
          {
            "id": "GridColumnCountField",
            "objectType": "NumberField",
            "label": "Grid Column Count"
