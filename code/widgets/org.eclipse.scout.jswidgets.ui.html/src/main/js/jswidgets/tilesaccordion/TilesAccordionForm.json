          {
            "id": "WithPlaceholdersField",
            "objectType": "CheckBoxField",
            "label": "With Placeholders",
            "labelVisible": false
          },
          {
            "id": "SelectableField",
            "objectType": "CheckBoxField",
            "label": "Selectable",
            "labelVisible": false
          },
          {
            "id": "MultiSelectField",
            "objectType": "CheckBoxField",
            "label": "Multi Select",
            "labelVisible": false
          },
          {
            "id": "ExclusiveExpandField",
            "objectType": "CheckBoxField",
            "label": "Exclusive Expand",
            "labelVisible": false,
            "tooltipText": "${textKey:ExclusiveExpandTooltip}",
            "gridDataHints": {
              "fillHorizontal": false
            }
          },
          {
            "id": "ScrollableField",
            "objectType": "CheckBoxField",
            "label": "Scrollable",
            "labelVisible": false
          }
