<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipsescout.demo.widgets</groupId>
		<artifactId>org.eclipsescout.demo.widgets</artifactId>
		<version>6.0.0-SNAPSHOT</version>
		<relativePath>../org.eclipsescout.demo.widgets</relativePath>
	</parent>

	<artifactId>org.eclipsescout.demo.widgets.ui.html.app.dev</artifactId>
	<packaging>war</packaging>

	<properties>
		<docker.image.prefix>eclipsescout</docker.image.prefix>
	</properties>

	<dependencies>
		<!-- Widget Application -->
		<dependency>
			<groupId>org.eclipsescout.demo.widgets</groupId>
			<artifactId>org.eclipsescout.demo.widgets.ui.html</artifactId>
		</dependency>

		<!-- Components from previous Widget Application -->
		<dependency>
			<groupId>org.eclipsescout.demo.widgets</groupId>
			<artifactId>org.eclipsescout.demo.widgets.client.old</artifactId>
		</dependency>

		<!-- Components for custom components -->
		<dependency>
			<groupId>org.eclipsescout.demo.widgets</groupId>
			<artifactId>org.eclipsescout.demo.widgets.client.custom</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipsescout.demo.widgets</groupId>
			<artifactId>org.eclipsescout.demo.widgets.ui.html.custom</artifactId>
		</dependency>

		<!-- Jetty Server -->
		<dependency>
			<groupId>org.eclipse.scout.rt</groupId>
			<artifactId>org.eclipse.scout.dev.jetty</artifactId>
		</dependency>

		<!-- Logging -->
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>jul-to-slf4j</artifactId>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>docker-maven-plugin</artifactId>
				<version>0.2.3</version>
				<configuration>
					<imageName>${docker.image.prefix}/${project.groupId}</imageName>
					<dockerDirectory>.</dockerDirectory>
					<resources>
						<resource>
							<!-- https://github.com/spotify/docker-maven-plugin/issues/68 -->
							<!-- <targetPath>/</targetPath> -->
							<directory>${project.build.directory}</directory>
							<include>${project.build.finalName}.war</include>
						</resource>
					</resources>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
