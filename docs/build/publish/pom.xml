<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipsescout.docs</groupId>
    <artifactId>aggregator</artifactId>
    <version>5.2.0-SNAPSHOT</version>
  </parent>

  <artifactId>publish</artifactId>
  <name>Publish documents</name>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.eclipsescout.docs</groupId>
      <artifactId>book_scout_frontend</artifactId>
      <version>5.0.0-SNAPSHOT</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.eclipsescout.docs</groupId>
      <artifactId>book_scout_intro</artifactId>
      <version>5.0.0-SNAPSHOT</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.eclipsescout.docs</groupId>
      <artifactId>eclipse_help</artifactId>
      <version>5.0.0-SNAPSHOT</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.eclipsescout.docs</groupId>
      <artifactId>scout_helloworld</artifactId>
      <version>5.0.0-SNAPSHOT</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.eclipsescout.docs</groupId>
      <artifactId>scout_install</artifactId>
      <version>5.0.0-SNAPSHOT</version>
      <type>pom</type>
    </dependency>
  </dependencies>

  <pluginRepositories>
    <pluginRepository>
      <id>bintray.jmini.maven</id>
      <url>http://dl.bintray.com/jmini/maven/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
  
  <build>
    <plugins>
      <plugin>
        <groupId>com.bsiag.htmltools</groupId>
        <artifactId>htmltools-maven-plugin</artifactId>
        <version>1.0.0</version>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>htmltools</goal>
            </goals>
            <configuration>
              <outputFolder>${project.build.directory}/published-docs</outputFolder>
              <inputSources>
                <!-- publish for eclipse.org/scout -->
                <inputSource>
                  <inputFolder>../scout_install/target/generated-docs</inputFolder>
                  <outputSubFolder>eclipse.org-scout</outputSubFolder>
                  <htmlOutput/>
                </inputSource>
                <inputSource>
                  <inputFolder>../scout_helloworld/target/generated-docs</inputFolder>
                  <outputSubFolder>eclipse.org-scout</outputSubFolder>
                  <htmlOutput/>
                </inputSource>
                <!-- publish for downloads -->
                <inputSource>
                  <inputFolder>../scout_install/target/generated-docs</inputFolder>
                  <outputSubFolder>downloads/article_install</outputSubFolder>
                  <htmlOutput>
                    <outputSubFolder>scout_install</outputSubFolder>
                    <outputZipFileName>scout_install.zip</outputZipFileName>
                  </htmlOutput>
                  <pdfOutput/>
                </inputSource>
                <inputSource>
                  <inputFolder>../scout_helloworld/target/generated-docs</inputFolder>
                  <outputSubFolder>downloads/article_helloworld</outputSubFolder>
                  <htmlOutput>
                    <outputSubFolder>scout_helloworld</outputSubFolder>
                    <outputZipFileName>scout_helloworld.zip</outputZipFileName>
                  </htmlOutput>
                  <pdfOutput/>
                </inputSource>
                <inputSource>
                  <inputFolder>../book_scout_frontend/target/generated-docs</inputFolder>
                  <outputSubFolder>downloads/book_scout_frontend</outputSubFolder>
                  <htmlOutput>
                    <outputSubFolder>scout_frontend</outputSubFolder>
                    <outputZipFileName>scout_frontend.zip</outputZipFileName>
                  </htmlOutput>
                  <pdfOutput/>
                </inputSource>
                <inputSource>
                  <inputFolder>../book_scout_intro/target/generated-docs</inputFolder>
                  <outputSubFolder>downloads/book_scout_intro</outputSubFolder>
                  <htmlOutput>
                    <outputSubFolder>scout_intro</outputSubFolder>
                    <outputZipFileName>scout_intro.zip</outputZipFileName>
                  </htmlOutput>
                  <pdfOutput/>
                </inputSource>
                <inputSource>
                  <inputFolder>../book_scout_architecture/target/generated-docs</inputFolder>
                  <outputSubFolder>downloads/book_scout_architecture</outputSubFolder>
                  <htmlOutput>
                    <outputSubFolder>scout_architecture</outputSubFolder>
                    <outputZipFileName>scout_architecture.zip</outputZipFileName>
                  </htmlOutput>
                  <pdfOutput/>
                </inputSource>
                <!-- publish for eclipse help -->
                <inputSource>
                  <inputFolder>../eclipse_help/target/generated-docs</inputFolder>
                  <outputSubFolder>scout-sdk-help</outputSubFolder>
                  <htmlOutput>
                    <outputSubFolder>html</outputSubFolder>
                    <pagesListFile>../eclipse_help/help-pages.txt</pagesListFile>
                    <cssReplacements>
                      <cssReplacement>
                        <originalFileName>asciidoctor.css</originalFileName>
                        <replacementFile>css-replacement/eclipse.css</replacementFile>
                      </cssReplacement>
                      <cssReplacement>
                        <originalFileName>coderay-asciidoctor.css</originalFileName>
                        <replacementFile>css-replacement/coderay-eclipse.css</replacementFile>
                      </cssReplacement>
                    </cssReplacements>
                  </htmlOutput>
                </inputSource>
              </inputSources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.bsiag.geneclipsetoc</groupId>
        <artifactId>geneclipsetoc-maven-plugin</artifactId>
        <version>1.0.1</version>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>geneclipsetoc</goal>
            </goals>
            <configuration>
              <helpPrefix>html/</helpPrefix>
              <sourceFolder>${project.build.directory}/published-docs/scout-sdk-help/html</sourceFolder>
              <pagesListFile>../eclipse_help/help-pages.txt</pagesListFile>
              <outputFile>${project.build.directory}/published-docs/scout-sdk-help/toc.xml</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>